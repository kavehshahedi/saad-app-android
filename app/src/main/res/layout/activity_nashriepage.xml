<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/NashriePage_NashrieImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="30dp"
                app:layout_constraintDimensionRatio="0.7:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_Nashrie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="نام نشریه:"
                android:textAlignment="viewEnd"

                android:textSize="12sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_NashrieImage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_NashrieName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="اشاره گر"
                android:textAlignment="viewEnd"

                android:textSize="12sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/NashriePage_Nashrie"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_NashrieImage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_University"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="دانشگاه:"
                android:textAlignment="viewEnd"

                android:textSize="12sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_Nashrie" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_UniversityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="خوارزمی کرج"
                android:textAlignment="viewEnd"

                android:textSize="12sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/NashriePage_University"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_Nashrie" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_Association"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="صاحب امتیاز:"
                android:textAlignment="viewEnd"

                android:textSize="12sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_University" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_AssociationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="انجمن مهندسی کامپیوتر"
                android:textAlignment="viewEnd"

                android:textSize="12sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/NashriePage_Association"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_University" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_Sardabir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="سردبیر:"
                android:textAlignment="viewEnd"

                android:textSize="12sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_Association" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_SardabirName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="امیرحسین غنیان"
                android:textAlignment="viewEnd"


                android:textSize="12sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/NashriePage_Sardabir"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_Association" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_Virastar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="ویراستار:"
                android:textAlignment="viewEnd"

                android:textSize="12sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_Sardabir" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_VirastarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="فلانی"
                android:textAlignment="viewEnd"


                android:textSize="12sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/NashriePage_Virastar"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_Sardabir" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_Geraphist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="طراح گرافیک:"
                android:textAlignment="viewEnd"

                android:textSize="12sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_Virastar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_GeraphistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="بهمانی"
                android:textAlignment="viewEnd"


                android:textSize="12sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/NashriePage_Geraphist"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_Virastar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_NashrieNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="شماره نشریه:"
                android:textAlignment="viewEnd"

                android:textSize="12sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_Geraphist" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:fontFamily="@font/shabnam"
                android:lines="1"
                android:text="1"
                android:textAlignment="viewEnd"


                android:textSize="12sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/NashriePage_NashrieNumber"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_Geraphist" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NashriePage_Description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_NashrieNumber"

                android:fontFamily="@font/shabnam"
                android:text="صثخهبدصثخهدلهصخثدلهصثدلثصدل
صخثهدلخهصثدلخهصثدلهخصثدلهصثدل
صثحلئخصثهئلخهصثلئدخهصثدلئهصثل
صثهئخهصدثخهلدصثهخلدصثهخلصخثهدبهخصثدبهصثدبثص
خصثدهبخهصثدبهخصثدبهص
صخثهبدخصهثدبهخصثدبهخصثدب
صخثهبخصهثدبهخصثدبهخ"
                android:textAlignment="viewEnd"
                android:textSize="12sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/NashriePage_DownloadButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NashriePage_Description"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:textColorHighlight="@color/lightGreen"

                android:textColor="@color/white"
                android:background="@color/design_default_color_primary_variant"
                android:text="دانلود"
                android:textSize="16sp"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                app:autoSizeTextType="uniform" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>